<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/EMPRESA_COCHES</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="mapeos/Proveedor.hbm.xml"/>
    <mapping resource="mapeos/Cliente.hbm.xml"/>
    <mapping resource="mapeos/Coche.hbm.xml"/>
    <mapping resource="mapeos/Exposicion.hbm.xml"/>
    <mapping resource="mapeos/Reparacion.hbm.xml"/>
    <mapping resource="mapeos/ReparacionChapa.hbm.xml"/>
    <mapping resource="mapeos/ReparacionElectrica.hbm.xml"/>
    <mapping resource="mapeos/ReparacionMecanica.hbm.xml"/>
    <mapping resource="mapeos/Taller.hbm.xml"/>
    <mapping resource="mapeos/Vendedor.hbm.xml"/>
    <mapping resource="mapeos/VendedorAsalariados.hbm.xml"/>
    <mapping resource="mapeos/VendedorComision.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
